    // Opcionális: ha a Formspree-t beállítod redirectre ide: /kapcsolat.html?sent=1
    // akkor megjelenítünk egy "köszönjük" dobozt.
    const params = new URLSearchParams(location.search);
    if (params.get("sent") === "1") {
      const el = document.getElementById("sentBox");
